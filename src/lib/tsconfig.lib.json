{
  "angularCompilerOptions": {
    "genDir": "../../dist",
    "skipTemplateCodegen": true,
    "debug": true
  },
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": [
      "es6",
      "es2020",
      "dom"
    ],
    "mapRoot": "",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "../../dist/@tangential",
    "rootDir": ".",
    "sourceMap": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "target": "es2020",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
      "jasmine"
    ],
    "paths": {
      "@tangential/core": [
        "../../dist/tangential/core",
      ],
      "@tangential/firebase-util": [
        "../../dist/tangential/firebase-util"
      ],
      "@tangential/media-types": [
        "../../dist/tangential/media-types"
      ],
      "@tangential/authorization-service": [
        "../../dist/tangential/authorization-service"
      ],
      "@tangential/admin-console": [
        "./admin-console"
      ],
      "@tangential/analytics": [
        "./analytics"
      ],
      "@tangential/app": [
        "./app"
      ],
      "@tangential/asciidoctor-panel": [
        "./asciidoctor-panel"
      ],

      "@tangential/components": [
        "./components"
      ],
      "@tangential/configurable-input-widgets": [
        "./configurable-input-widgets"
      ],
      "@tangential/input-widgets": [
        "./input-widgets"
      ],

      "@tangential/plugin": [
        "./plugin"
      ]
    }
  },
  "exclude": [
    "**/*.spec.*"
  ]
}
