/* To learn more about this file see: https://angular.io/config/tsconfig. */
{// these options are overrides used only by ts-node
  "ts-node": {
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "module": "commonjs"
    }
  },
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@tangential/core": [
        "dist/tangential/core"
      ],
      "@tangential/firebase-util": [
        "dist/tangential/firebase-util"
      ],
      "@tangential/media-types": [
        "dist/tangential/media-types"
      ],
      "@tangential/authorization-service": [
        "dist/tangential/authorization-service"
      ],
      "@tangential/components": [
        "dist/tangential/components"
      ],
      "@tangential/analytics": [
        "dist/tangential/analytics"
      ],
      "@tangential/plugin": [
        "dist/tangential/plugin"
      ],
      "@tangential/asciidoctor-panel": [
        "dist/tangential/asciidoctor-panel"
      ],
      "@tangential/admin-console": [
        "src/lib/admin-console"
      ],

      "@tangential/configurable-input-widgets": [
        "src/lib/configurable-input-widgets"
      ],
      "@tangential/input-widgets": [
        "src/lib/input-widgets"
      ]
    }
  }
}
